package com.example.test;

import org.springframework.http.HttpEntity;
import org.springframework.http.HttpHeaders;
import org.springframework.http.HttpMethod;
import org.springframework.http.MediaType;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.client.RestTemplate;

@Controller
public class APITestController{
	
	@GetMapping("/")
	public String index(Model model) {
		return "index";
	}
	@PostMapping("/")
	public String postAPI() throws Exception {
		callQiitaAPI(null);
		return "redirect:/";
	}
	
	@SuppressWarnings({ "deprecation" })
	private String callQiitaAPI(String tokenID) throws Exception {
		
		RestTemplate rest = new RestTemplate();
		
		if(tokenID == null) {
			tokenID = "f4426d44d33264d0288874837c9fe4536f904c3e";
		}
		

		final String endpoint = "https://qiita.com/api/v2/schema";
		
		final String url = "https://qiita.com/api/v2/items?page=1&per_page=20&query=qiita+user%3AQiita";//"https://qiita.com/api/v2/";
		
		HttpHeaders headers = new HttpHeaders();
		
		headers.setContentType(MediaType.APPLICATION_JSON_UTF8);
		headers.add("Authorization: Bearer", tokenID);
		HttpEntity<String> request = new HttpEntity<>(headers);
		
		//RequestEntity<String
		ResponseEntity<String> response = rest.exchange(url, HttpMethod.GET,null,String.class);
				
		String json = response.getBody();
				
		return json;
		
	}
	
	
	
}

